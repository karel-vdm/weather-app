<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/turn_on_location_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_location_off" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/turn_on_location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Turn on location to get the latest weather" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/turn_on_location_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Turn on location" />

</LinearLayout>